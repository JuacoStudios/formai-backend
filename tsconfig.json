{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noEmitOnError": false
  },
  "include": ["src/**/*"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "express", "multer"],
    "noImplicitAny": false,
    "noEmitOnError": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"]
}
